<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="jdbc.driverClassName">org.postgresql.Driver</property>
        <property name="jdbc.password">postgres</property>
        <property name="jdbc.url">jdbc:postgresql://localhost:5432/postgres</property>
        <property name="jdbc.passwordusername">postgres</property>
        <property name="jdbc.default_schema">public</property>
        <property name="jdbc.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <mapping class="Publisher"/>
    </session-factory>
</hibernate-configuration>